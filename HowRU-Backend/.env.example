# Database (Neon PostgreSQL)
DATABASE_URL=postgresql://user:password@your-neon-host.neon.tech/neondb?sslmode=require

# Twilio (from your console)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_VERIFY_SID=your_twilio_verify_sid
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_MESSAGING_SERVICE_SID=your_messaging_service_sid

# RevenueCat (for subscriptions)
REVENUECAT_API_KEY=your_revenuecat_api_key
REVENUECAT_WEBHOOK_SECRET=generate_webhook_secret_in_revenuecat_dashboard

# Resend (for emails)
RESEND_API_KEY=your_resend_api_key
FROM_EMAIL=HowRU <noreply@howru.app>

# JWT Auth
JWT_SECRET=generate_a_secure_random_string_here
JWT_EXPIRES_IN=7d

# Apple Sign-In
APPLE_CLIENT_ID=com.howru.app

# APNs (Apple Push Notifications)
APNS_KEY_ID=your_apns_key_id
APNS_TEAM_ID=your_apple_team_id
APNS_BUNDLE_ID=com.howru.app
APNS_KEY_BASE64=base64_encoded_p8_key

# Cloudflare R2 Storage
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET=howru-media
CDN_URL=https://cdn.howru.app

# API URL (for webhooks)
API_URL=https://api.howru.app

# Server
PORT=3000
NODE_ENV=development
